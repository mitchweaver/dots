jpg() {
    if [ -f "$1" ] ; then
        jpegoptim -s "$1"
    elif [ -d "${1:-.}" ] ; then
        find "${1:-.}" -type f -iname "*.jp*" -exec jpegoptim -s {} \;
    fi
}

