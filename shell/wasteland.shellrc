pvcp() {
    if [ $# -ge 2 ] ; then
        case $2 in
            --delete)
                return 1
                ;;
            */)
                _file="${2%/}/${1##*/}"
                ;;
            *)
                if [ -d "$2" ] ; then
                    _file="${2%/}/${1##*/}"
                else
                    _file="$2"
                fi
        esac
        : > "$_file" || return 1
    else
        return 1
    fi
    if pv < "$1" > "$_file" ; then
        if [ "$3" = "--delete" ] ; then
            rm -f -- "$1"
        fi
    fi
}
pvmv() { pvcp "$1" "$2" --delete ; }

