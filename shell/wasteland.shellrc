        *.flac|*.wav)
            ;;
        *)
            break
    esac
    shnsplit -f "$1" -o "flac flac -s -8 -o %f -" "$2" &&
    mv -v "$2" /tmp/ &&
    cuetag.sh "$1" *.flac
