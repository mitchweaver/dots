# imagemagick
# -*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*
png2jpg() {
    for i ; do
        [ -f "$i" ] || continue
        case $i in
            *.png)
                convert "$i" "${i%png}"jpg || exit 1
                jpegoptim -s "${i%png}"jpg || exit 1
                /bin/rm "$i"
        esac
    done
}

jpg() {
    if [ -f "$1" ] ; then
        jpegoptim -s "$1"
    elif [ -d "${1:-.}" ] ; then
        find "${1:-.}" -type f -iname "*.jp*" -exec jpegoptim -s {} \;
    fi
}

cover() { curl -q -# -L "$1" -o cover.jpg ; jpg ; }
band()  { curl -q -# -L "$1" -o band.jpg  ; jpg ; }
logo()  { curl -q -# -L "$1" -o logo.jpg  ; jpg ; }

