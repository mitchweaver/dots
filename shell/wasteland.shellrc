cuesplit() {
    case $1 in
        *h|*help)
            >&2 echo 'usage: cuesplit file.cue file.flac'
            break
            ;;
        *.cue)
            ;;
        *)
            break
    esac
    case $2 in
        *.flac|*.wav)
            ;;
        *)
            break
    esac
    shnsplit -f "$1" -o "flac flac -s -8 -o %f -" "$2" &&
    mv -v "$2" /tmp/ &&
    cuetag.sh "$1" *.flac
}

alias progress='progress -w -M'

pvcp() {
    if [ $# -ge 2 ] ; then
        case $2 in
            --delete)
                return 1
                ;;
            */)
                _file="${2%/}/${1##*/}"
                ;;
            *)
                if [ -d "$2" ] ; then
                    _file="${2%/}/${1##*/}"
                else
                    _file="$2"
                fi
        esac
        : > "$_file" || return 1
    else
        return 1
    fi
    if pv < "$1" > "$_file" ; then
        if [ "$3" = "--delete" ] ; then
            rm -f -- "$1"
        fi
    fi
}
pvmv() { pvcp "$1" "$2" --delete ; }

