# =================================================
# DISABLE VSYNC
# =================================================
output * adaptive_sync off

# =================================================
# STARTUP APPS
# =================================================
exec background
exec dbus-update-activation-environment --all
exec dbus-launch mako
exec waybar
exec gammastep -m randr -l '36.06083743210746:-95.79738783706367'
exec swayidle -w \
         timeout 500 'lock' \
         timeout 900 'swaymsg "output * power off"' resume 'swaymsg "output * power on"' \
         before-sleep 'swaylock -f -c 000000'

# =================================================
# INPUT / OUTPUT
# =================================================
input type:keyboard {
    xkb_layout "us"
    # note: default=300/30
    repeat_delay 230
    repeat_rate 33
    xkb_options "caps:escape"
    # xkb_options "super_r:alt"
}

input type:touchpad {
    tap enabled
    natural_scroll enabled
    accel_profile "flat"
    click_method clickfinger
}

input type:pointer {
    accel_profile "flat"
    click_method clickfinger
}

# output * {
#     scale 2
# }

# =================================================
# VARS
# =================================================
# note: mod1 = alt, mod4 = super
# NOTE NOTE: M1 Mac / Asahi for some reason these are switched
#            in however sway reads them. Only happens with sway not sure why.
####set $mod Mod1
set $mod Mod4

set $left h
set $down j
set $up k
set $right l

# Your preferred terminal emulator
# set $term stwrapper
set $term asahi-kitty

# =================================================
# GAPS / THEMES / RICE
# =================================================
gaps inner 14
gaps outer 4
smart_gaps on
hide_edge_borders smart
smart_borders no_gaps
# smart_gaps inverse_outer

bindsym $mod+g gaps inner current plus 2
bindsym $mod+shift+g gaps inner current minus 2

# disable borders
default_border pixel 0

include "$HOME/.cache/wal/colors-sway"
#                                                        BORDER
client.focused $color0 $background $foreground $color5   $color2
client.unfocused $color0 $background $foreground $color5 $color1

