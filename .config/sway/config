# Volume / Brightness
# =================================================
bindsym XF86MonBrightnessUp exec asahi-brightnessctl -i
bindsym XF86MonBrightnessDown exec asahi-brightnessctl -d
bindsym XF86AudioRaiseVolume exec vol -i
bindsym XF86AudioLowerVolume exec vol -d

