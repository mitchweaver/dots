bindsym $mod+w exec MOZ_ENABLE_WAYLAND=1 firefox
bindsym $mod+e exec pcmanfm
bindsym $mod+r exec kitty --single-instance ranger
bindsym $mod+p exec menu --wide run -p 'Run:' | xargs swaymsg exec --
bindsym $mod+o exec dedit
####bindsym $mod+p exec wofi -f -I -m -b -i -G --show run | xargs swaymsg exec --

# toggle between alt / super to kill so i dont accidentally kill when gaming
bindsym $mod+q kill
# bindsym Mod4+q kill

# "kill window unless XXX"
#########bindsym $mod+q [class="steam_app_813780"] || kill

# =================================================
# Exiting / Reloading
# =================================================
bindsym $mod+Shift+c reload
bindsym $mod+Control+Shift+q exec swaynag -t warning -m 'Exit sway? ' -B 'Yes, exit sway' 'swaymsg exit'

# =================================================
# Window Focus
# =================================================
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# =================================================
# Window Moving
# =================================================
bindsym Control+Shift+$left move left
bindsym Control+Shift+$down move down
bindsym Control+Shift+$up move up
bindsym Control+Shift+$right move right

# =================================================
# Window Resizing
# =================================================
bindsym $mod+Shift+$left resize grow width 8
bindsym $mod+Shift+$right resize shrink width 8
bindsym $mod+Shift+$down resize grow height 8
bindsym $mod+Shift+$up resize shrink height 8

# =================================================
# Switch to workspace
# =================================================
# first we switch to the 2nd monitor, then the 1st
# this way the 1st monitor behaves completely as normal
#
# the only difference is when you're on monitor #2 you
# have to click or move mouse to regain focus to stay on #2
#
# this is actually fine for me as 2nd monitor is usually
# always email/chat/documentation etc so i dont mind
#
#
# if anyone has a better solution to this jank garbage
# please let me know
bindsym $mod+1 workspace $ws1b; workspace $ws1a
bindsym $mod+2 workspace $ws2b; workspace $ws2a
bindsym $mod+3 workspace $ws3b; workspace $ws3a
bindsym $mod+4 workspace $ws4b; workspace $ws4a
bindsym $mod+5 workspace $ws5b; workspace $ws5a
bindsym $mod+6 workspace $ws6b; workspace $ws6a
bindsym $mod+7 workspace $ws7b; workspace $ws7a
bindsym $mod+8 workspace $ws8b; workspace $ws8a
bindsym $mod+9 workspace $ws9b; workspace $ws9a
bindsym $mod+Backspace workspace $ws9b; workspace $ws9a

# =================================================
# Move to workspace
# =================================================
bindsym $mod+Shift+1 move container to workspace number $ws1a
bindsym $mod+Shift+2 move container to workspace number $ws2a
bindsym $mod+Shift+3 move container to workspace number $ws3a
bindsym $mod+Shift+4 move container to workspace number $ws4a
bindsym $mod+Shift+5 move container to workspace number $ws5a
bindsym $mod+Shift+6 move container to workspace number $ws6a
bindsym $mod+Shift+7 move container to workspace number $ws7a
bindsym $mod+Shift+8 move container to workspace number $ws8a
bindsym $mod+Shift+9 move container to workspace number $ws9a
bindsym $mod+Shift+Backspace move container to workspace number $ws9a

# =================================================
