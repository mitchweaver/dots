# =================================================
# Monitor Configuration --- swaymsg -t get_outputs
# =================================================
set $LEFT_MON 'Acer Technologies XV252Q F 11481FF254200'
set $RIGHT_MON 'Acer Technologies VG240Y S 0x027157B7'
set $LAPTOP 'eDP-1'

# main monitor === left
# 390hz 1080p acer
output $LEFT_MON resolution 1920x1080@390.297Hz position 0,0 adaptive_sync off allow_tearing yes

# "to the right" of main monitor
# 165hz old acer
output $RIGHT_MON resolution 1920x1080@165.003Hz position 1920,0 adaptive_sync off allow_tearing yes

# laptop
output $LAPTOP resolution 1920x1080@60.033Hz position 0,0 scale 1 adaptive_sync off allow_tearing yes
bindswitch --reload --locked lid:on output $LAPTOP disable
bindswitch --reload --locked lid:off output $LAPTOP enable

# ========================================================================
# workspace configuration
#
# 10 workspaces per monitor, similar to dwm or
# really any sane WM would handle it
#
# the default i3/sway behavior of mixing workspaces
# between monitors is baffling to me
# ========================================================================
set $ws1a "1-a"
set $ws2a "2-a"
set $ws3a "3-a"
set $ws4a "4-a"
set $ws5a "5-a"
set $ws6a "6-a"
set $ws7a "7-a"
set $ws8a "8-a"
set $ws9a "9-a"

set $ws1b "1-b"
set $ws2b "2-b"
set $ws3b "3-b"
set $ws4b "4-b"
set $ws5b "5-b"
set $ws6b "6-b"
set $ws7b "7-b"
set $ws8b "8-b"
set $ws9b "9-b"

workspace $ws1a output $LEFT_MON
workspace $ws2a output $LEFT_MON
workspace $ws3a output $LEFT_MON
workspace $ws4a output $LEFT_MON
workspace $ws5a output $LEFT_MON
workspace $ws6a output $LEFT_MON
workspace $ws7a output $LEFT_MON
workspace $ws8a output $LEFT_MON
workspace $ws9a output $LEFT_MON

workspace $ws1b output $RIGHT_MON
workspace $ws2b output $RIGHT_MON
workspace $ws3b output $RIGHT_MON
workspace $ws4b output $RIGHT_MON
workspace $ws5b output $RIGHT_MON
workspace $ws6b output $RIGHT_MON
workspace $ws7b output $RIGHT_MON
workspace $ws8b output $RIGHT_MON
workspace $ws9b output $RIGHT_MON

workspace_auto_back_and_forth no

# ========================================================================
# Key binds
