# programs
# alt + Return
    # st -T 'Simple Terminal' -t 'Simple Terminal' -c 'Simple Terminal'
    #st -T 'Simple Terminal' -t 'Simple Terminal' -c 'Simple Terminal'
alt Return
    stwrapper
alt + shift + Return
    stwrapper -t
alt + w
    brws
alt + r
    stwrapper -c ranger -e ranger
    # stwrapper -c ranger -e ranger --cmd='set viewmode multipane'
control + alt + x
    slock
Print
    scrap -n
control + Print
    scrap
alt + e
    pcmanfm
super + e
    pcmanfm
alt + v
    stwrapper -c 'Vim Wiki' -e nvim -c VimwikiIndex
alt + m
    stwrapper -c neomutt -e neomutt


# dmenus
alt + p
    menu run -p 'Run:'
alt + o
    dedit
alt + i
    opn --menu
alt + y
    dmoji

# misc
control + alt + k
    keys
shift + Delete
    xsel -o


